<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_status_normal_heart"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:src="@drawable/like_filled"
            android:tint="@color/red_600"/>

        <TextView
            android:id="@+id/item_status_normal_heart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:text="0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_status_golden_heart"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:src="@drawable/like_filled"
            android:tint="@color/yellow_700"/>

        <TextView
            android:id="@+id/item_status_golden_heart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_status_commentaries"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:src="@drawable/commentary"/>

        <TextView
            android:id="@+id/item_status_commentaries_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:text="0"/>

    </LinearLayout>

</LinearLayout>